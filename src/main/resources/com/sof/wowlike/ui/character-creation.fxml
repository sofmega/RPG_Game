<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="12" alignment="CENTER" prefWidth="600" prefHeight="400">

    <Label text="Character Creation" style="-fx-font-size: 22;"/>

    <TextField fx:id="nameField" promptText="Enter character name"/>

    <ChoiceBox fx:id="classChoice"/>

    <Button text="Create Character" onAction="#onCreate"/>

</VBox>
